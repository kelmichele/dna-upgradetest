<% @page_title = "New Message" %>

<div class="full">
	<div class="wrap">
		<h1>New Message to <%= @receiver.name.upcase %></h1>
		<hr class="title-line">
		<div class="clearfix"></div>

		<%= form_for @personal_message do |f| %>
		  <%= hidden_field_tag 'receiver_id', @receiver.id %>
	    <%= f.label :body %><br>
		  <%= f.text_area :body, placeholder: "How can we help you today?" %>
			<br>
		  <%= f.submit %>
		<% end %>
		<%= link_to "Back to User List", users_path, class: 'btn btn-add' %>
	</div>
</div>
